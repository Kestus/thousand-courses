<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/onboarding_activity_navigation"
    app:startDestination="@id/headlineFragment">

    <fragment
        android:id="@+id/headlineFragment"
        android:name="ru.kestus.thousand_courses.presentation.onboardingActivity.fragment.HeadlineFragment"
        android:label="fragment_headline"
        tools:layout="@layout/fragment_headline" >
        <action
            android:id="@+id/action_headlineFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:enterAnim="@anim/slide_in"
            app:popEnterAnim="@anim/fade_in"
            />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="ru.kestus.thousand_courses.presentation.onboardingActivity.fragment.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment2"
            app:destination="@id/loginFragment"
            />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="ru.kestus.thousand_courses.presentation.onboardingActivity.fragment.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment2"
            app:destination="@id/registerFragment" />
    </fragment>
</navigation>