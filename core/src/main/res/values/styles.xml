<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Thousandcourses.ButtonPrimary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="fontWeight">500</item>
        <item name="layout_constraintWidth_max">420dp</item>
    </style>

    <style name="Widget.Thousandcourses.TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/green</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>
    
    <style name="TextAppearance.Thousandcourses.Headline" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">28sp</item>
        <item name="lineHeight">36dp</item>
        <item name="fontWeight">500</item>
        <item name="color">?attr/colorOnBackground</item>
    </style>

    <style name="TextAppearance.Thousandcourses.Title.Medium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">18dp</item>
        <item name="fontWeight">500</item>
        <item name="color">?attr/colorOnBackground</item>
    </style>

</resources>