<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Widget.Thousandcourses.ButtonPrimary" parent="Widget.Material3.Button">
        <item name="background">@drawable/button_rounded_corner_shape</item>
        <item name="android:backgroundTint">@color/color_state_button_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="fontWeight">500</item>
        <item name="layout_constraintWidth_max">420dp</item>
    </style>

    <style name="Widget.Thousandcourses.TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:color">?attr/colorAccent</item>
    </style>

    <style name="Widget.Thousandcourses.TextButton.Small" parent="Widget.Thousandcourses.TextButton">
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">15dp</item>
        <item name="fontWeight">600</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>

    </style>

    <style name="Widget.Thousandcourses.Button.VK" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/button_rounded_corner_shape</item>
        <item name="android:backgroundTint">#2683ED</item>
        <item name="android:src">@drawable/ic_vk</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="Widget.Thousandcourses.Button.OK" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/shape_gradient_ok</item>
        <item name="android:src">@drawable/ic_ok</item>
        <item name="android:tint">@color/white</item>
    </style>

